{
  "name": "sav-contract",
  "version": "1.0.3",
  "description": "sav contract tools",
  "main": "dist/sav-contract.cjs.js",
  "module": "dist/sav-contract.es.js",
  "scripts": {
    "build-cli": "rollup -c script/rollup.cli.js",
    "build-client": "rollup -c script/rollup.config.js",
    "build": "run-p build-cli build-client",
    "tcreate": "node dist/contract.js -t create -a HelloWorld -F ./tmp/HelloWorld",
    "tcontrace": "node dist/contract.js -i test/fixtures/interface -l js,node,php -C ./tmp/contract -M ./tmp/modals -F ./tmp/front -S modal",
    "lint": "standard src/** test/** client/**",
    "fix": "standard src/** test/** client/** --fix",
    "t": "ava ./test/specs/interfaceLoader.js --no-color",
    "test": "nyc ava ./test/specs"
  },
  "bin": {
    "contract": "bin/contract"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/savjs/sav-contract.git"
  },
  "author": {
    "name": "jetiny",
    "email": "86287344@qq.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/savjs/sav-contract/issues"
  },
  "devDependencies": {
    "acorn": "^5.5.3",
    "acorn-es7-plugin": "^1.1.7",
    "babel-standalone": "^6.26.0",
    "commander": "^2.15.1",
    "fs-extra": "^5.0.0",
    "json5": "^1.0.0",
    "jsonar": "^1.8.0",
    "os-locale": "^2.1.0",
    "php-parser": "^2.2.0"
  },
  "dependencies": {
    "sav-router": "latest",
    "sav-schema": "next",
    "sav-util": "latest"
  },
  "standard": {
    "require": "babel-eslint",
    "babel": "inherit",
    "ignore": [
      "fixtures",
      "package.json",
      "decorator.js"
    ],
    "global": [
      "AsyncFunction",
      "PROJECT_ROOT",
      "Promise"
    ]
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "test"
    ]
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "babel": {
    "plugins": [
      "transform-decorators-legacy",
      "transform-es2015-modules-commonjs"
    ]
  },
  "homepage": "https://github.com/savjs/sav-contract#readme"
}